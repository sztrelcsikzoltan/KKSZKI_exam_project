<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<system.serviceModel>
		<services>
			<service name="Base_service.UserService" behaviorConfiguration="MyServiceTypeBehaviors">
				<endpoint address="soap" binding="basicHttpBinding" contract="Base_service.Interfaces.IUserService" bindingConfiguration="basicHttp"></endpoint>
				<endpoint address="" binding="webHttpBinding" contract="Base_service.Interfaces.IUserService" behaviorConfiguration="EndPointBehavior"></endpoint>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:3000"/>
					</baseAddresses>
				</host>
			</service>
			<service name="Base_service.StockService" behaviorConfiguration="MyServiceTypeBehaviors">
				<endpoint address="soap" binding="basicHttpBinding" contract="Base_service.Interfaces.IStockService" bindingConfiguration="basicHttp"></endpoint>
				<endpoint address="" binding="webHttpBinding" contract="Base_service.Interfaces.IStockService" behaviorConfiguration="EndPointBehavior"></endpoint>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:3001"/>
					</baseAddresses>
				</host>
			</service>
			<service name="Base_service.LocationService" behaviorConfiguration="MyServiceTypeBehaviors">
				<endpoint address="soap" binding="basicHttpBinding" contract="Base_service.Interfaces.ILocationService" bindingConfiguration="basicHttp"></endpoint>
				<endpoint address="" binding="webHttpBinding" contract="Base_service.Interfaces.ILocationService" behaviorConfiguration="EndPointBehavior"></endpoint>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:3002"/>
					</baseAddresses>
				</host>
			</service>
		</services>

		<behaviors>
			<endpointBehaviors>
				<behavior name="EndPointBehavior">
					<webHttp />
				</behavior>
			</endpointBehaviors>
			<serviceBehaviors>
				<behavior name="MyServiceTypeBehaviors" >
					<serviceMetadata httpGetEnabled="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<bindings>
			<webHttpBinding>
				<binding name="httpWebBinding">
					<security mode="Transport"></security>
				</binding>
			</webHttpBinding>
			<basicHttpBinding>
				<binding name="basicHttp" allowCookies="true"
						 maxReceivedMessageSize="1000000"
						 maxBufferSize="1000000"
						 maxBufferPoolSize="1000000">
					<readerQuotas maxDepth="32"
						 maxArrayLength="1000000"
						 maxStringContentLength="1000000"/>
				</binding>
			</basicHttpBinding>
		</bindings>
	</system.serviceModel>
</configuration>