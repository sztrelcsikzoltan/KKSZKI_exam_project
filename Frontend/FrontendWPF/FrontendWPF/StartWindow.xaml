                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FF8E52F7"/>
                            <GradientStop Color="#FF7C3763" Offset="0.799"/>
                        </LinearGradientBrush>
                    </Border.Background>
