<Window x:Class="WPF.NET_Templates.Templates.Layout_ScaleTransform"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.NET_Templates"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Layout_ScaleTransform" Height="450" Width="800">
    <Grid>
        <StackPanel Width="155">
            <Button Background="Salmon">Without scaling</Button>
            <Button Background="AntiqueWhite">With scaling (ScaleX="1.5")
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="1.5" />
                </Button.RenderTransform>
            </Button>
            <Button Background="AntiqueWhite">With scaling (ScaleY="1.5")
                <Button.RenderTransform>
                    <ScaleTransform ScaleY="1.5"  />
                </Button.RenderTransform>
            </Button>
        </StackPanel>
    </Grid>
</Window>
